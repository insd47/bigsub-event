generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Guild {
  id          String   @id @default(cuid())

  events      Event[]
}

model Event {
  id          String   @id @default(cuid())
  name        String
  managerId   String

  guildId     String
  guild       Guild    @relation(fields: [guildId], references: [id])

  branches    EventBranch[]
}

model EventBranch {
  id          String   @id @default(cuid())
  name        String

  eventId     String
  event       Event    @relation(fields: [eventId], references: [id])

  participations EventParticipation[]
}

model EventParticipation {
  id          String   @id @default(cuid())
  userId      String
  messageId   String
  confirmed   Boolean

  branchId    String
  branch      EventBranch @relation(fields: [branchId], references: [id])

  files       EventParticipationFile[]

  @@unique([branchId, userId])
}

model EventParticipationFile {
  id          String   @id @default(cuid())
  blob        String

  participationId String
  participation EventParticipation @relation(fields: [participationId], references: [id])
}
